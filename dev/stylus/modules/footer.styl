/*!-----------------------------------------------------------------
	.footer - модуль подвал сайта
 -----------------------------------------------------------------*/
.footer
	background-color #2d3f4d
	&__menu
		padding 80px 8.333% 70px
		@media screen and (max-width 375px)
			padding-top 40px
			padding-bottom 30px
	&__info
		color #fff
		display flex
		padding 0 8.333%
		@media screen and (max-width 768px)
			flex-wrap wrap
	&__contact
		width 25%
		display flex
		flex-direction column
		padding-bottom 66px
		@media screen and (max-width 768px)
			width 50%
		@media screen and (max-width 425px)
			width 100%
		@media screen and (max-width 375px)
			padding-bottom 40px
	&__title
		color: #688ebf
		font-family: 'ClearSansRegular', sans-serif
		font-size: 17px
	&__phone
	&__email
		color #fff
		margin-top 17px
		font-size 15px
		line-height 1
		text-decoration none
		&:hover
			color #fff
			text-decoration none
	&__phone
		font-family 'ClearSansBold'
		letter-spacing: 1px
	&__email
		font-family 'ClearSansRegular'
	&__vacancy
		display flex
		align-items center
	&__vacancy-link
		text-transform uppercase
		color #FFF
		padding-bottom 66px
		font-weight 700
		letter-spacing 1px
		font-size 13px
		white-space normal
		margin-top 10px
		text-decoration none
		font-weight: 700
		&:hover
			color #fff
			text-decoration none
			& > svg
				left 16px
		& > svg
			position relative
			left 11px
			margin-bottom: -2px
			width: 13px
			fill: #fff
			transition: .3s

	&__social
		background-color #253643
		padding 48px 0
		text-align center
		@media screen and (max-width 425px)
			text-align left
			padding-left 8.333%
	&__social-link
		font-family 'ClearSansBold';
		text-transform uppercase
		color #798e9e
		font-size 15px
		text-decoration none
		& + &
			margin 0 60px
		&:hover
			color: #1a88f9
			text-decoration none





