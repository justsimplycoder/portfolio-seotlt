/*!-----------------------------------------------------------------
  .hamburger - модуль показа меню на маленьких экранах
 -----------------------------------------------------------------*/
.hamburger
	height 25px
	width 26px
	cursor pointer
	display none
	position fixed
	right 15px
	top 4px
	z-index 2
	transition-duration: 0.5s
	&__line
		transition-duration: 0.5s
		position: absolute
		height: 3px
		width: 26px
		top: 10px
		background-color: #fff
		&:before
			transition-duration: 0.5s
			position: absolute
			width: 26px
			height: 3px
			background-color: #fff
			content: ""
			top: -10px
		&:after
			transition-duration: 0.5s
			position: absolute
			width: 26px
			height: 3px
			background-color: #fff
			content: ""
			top: 10px
	&--is-active
		.hamburger__line
			transition-duration: 0.5s
			background: transparent
			&:before
				transform: rotateZ(45deg) scaleX(1.35) translate(6px, 6px)
			&:after
				transform: rotateZ(-45deg) scaleX(1.35) translate(6px, -6px)

// Adaptive
@media screen and (max-width: 425px)
	.hamburger
		display block