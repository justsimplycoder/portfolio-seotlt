/*!-----------------------------------------------------------------
	.clients - модуль секция наши клиенты
 -----------------------------------------------------------------*/
.clients
	padding: 70px 8% 50px
	@media screen and (max-width 1024px)
		padding 50px 7%
	@media screen and (max-width 425px)
		padding 30px 0
	&__title
		text-transform: uppercase
		font-size: 20px
		font-weight: 400
		text-align: center
		@media screen and (max-width 425px)
			margin 5px 0
		& > span
			color #2a90f6
	&__list
		margin 50px auto 10px
		display: flex
		justify-content: space-between
		gap 20px
		align-items: center
		@media screen and (max-width 1024px)
			flex-wrap wrap
			justify-content center
		@media screen and (max-width 425px)
			margin-top 40px
	&__item
		opacity: 0.3
		transition: .3s
		&:hover
			opacity: 1