/*!-----------------------------------------------------------------
  .arrow - модуль стрелка
 -----------------------------------------------------------------*/
.arrow
	--size: 10px
	border-style: solid
	border-width: 0 calc(var(--size) / 5) calc(var(--size) / 5) 0
	border-color: inherit;
	width var(--size)
	height var(--size)
	display: inline-block
	position relative
	&--theme-right
		transform: rotate(-45deg)
	&--theme-left
		transform: rotate(135deg)
		margin-left: calc(var(--size) / 2)
	&--theme-up
		transform: rotate(-135deg)
		margin-left: calc(var(--size) / 2)
		top calc(var(--size) / 3)
	&--theme-down
		transform: rotate(45deg)
		margin-left: calc(var(--size) / 2)
		bottom calc(var(--size) / 3)
	&--theme-top-page
		--size: 24px
		transform: rotate(-135deg)
		display block
		margin-left 0
		top 8px