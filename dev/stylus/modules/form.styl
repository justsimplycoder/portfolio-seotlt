/*!-----------------------------------------------------------------
	.form - модуль форм
 -----------------------------------------------------------------*/
.form
	display flex
	flex-wrap wrap
	justify-content: space-between
	--gap: 20px
	gap var(--gap)
	~/__group
		position relative
		display flex
		align-items center
		&--w-full
			width 100%
		&--w-6-12
			width calc(50% - var(--gap) / 2)
			@media screen and (max-width 550px)
				width 100%
		&--start-right
			justify-content end
			@media screen and (max-width 550px)
				justify-content start
		~/__label
			position absolute
			color: #7093c0
			font-size: 17px
			top: 16px
			left: 30px
			transition: .3s
			cursor: text
			@media screen and (max-width 375px)
				font-size 14px
		~/__input
			background: #e7f1fe
			padding: 15px 30px 0
			font-size: 17px
			outline: none !important
			height: 55px
			border-radius: 30px
			border: 0
			width 100%
			&:focus + .form__label
			&--focus + .form__label
				font-size 11px
				top 4px
			&[type="file"]
				display none
		~/__file
			cursor pointer
			border-bottom: 1px dashed #7093c0
			color #7093c0
			margin-left 22px
			position relative
			font-size 17px
			& > svg
				position absolute
				left -22px
				top 5px
				width 16px
				fill #7093c0
		~/__consent
			color: #3d484f
			font-family: "PT Sans Caption"
			font-size: 13px
			font-weight: 400
			line-height: 42px

#form-phone
	color transparent
	&.form__input:focus
	&.form__input--focus
		color #36434d
