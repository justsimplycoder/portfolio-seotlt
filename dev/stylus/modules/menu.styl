/*!-----------------------------------------------------------------
	.menu - модуль меню
 -----------------------------------------------------------------*/
.menu
	position relative
	&__lists
		margin 0
		padding 0
		display flex
		list-style none
		column-gap 5%
	&__link
		text-decoration none
		color #fff
		transition .3s
		&:hover
			color #fff
		&--theme-footer
			font-size 16px
			font-weight bold
			color #fff
			&:hover
				color #fff

// Adaptive
@media screen and (max-width: 425px)
	.menu
		&__lists
			top 0
			left 0
			position fixed
			width 100%
			height 100vh
			background rgb(51,153,204)
			z-index 1
			display flex
			opacity 0
			flex-direction column
			align-items center
			justify-content center
			font-size 1.5rem
			&--is-show
				animation-name: animation-menu-show
				animation-duration: .5s
				animation-fill-mode both
				display flex
			&--is-hide
				animation-name: animation-menu-hide
				animation-duration: .5s
				animation-fill-mode both
		&__link
			padding-top 15px
			padding-bottom 15px

// Animation
@keyframes animation-menu-show
	from
		opacity 0
	to
		opacity 1
@keyframes animation-menu-hide
	from
		opacity 1
	to
		opacity 0
		display none