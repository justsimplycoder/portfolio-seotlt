/*!-----------------------------------------------------------------
	.loader - модуль прелоадер
 -----------------------------------------------------------------*/
.loader
	border: 8px solid #f3f3f3
	border-top-color: #3498db
	border-radius: 50%
	size: 60px
	animation: spin 2s linear infinite
	&--size-small
		size 30px
		border-width 4px

@keyframes spin
	0%
		transform: rotate(0deg)
	100%
		transform: rotate(360deg)