/*!-----------------------------------------------------------------
	.services - модуль секция сервис
 -----------------------------------------------------------------*/
.services
	padding-bottom 100px
	&__slide
		~/__wrap
			margin 0 135px
			position relative
			height: 800px
			display flex
			align-items center
			&:before
				content: ''
				position: absolute
				opacity: 1
				width: calc(92vh - 200px)
				height: calc(92vh - 200px)
				left 21%
				border-radius: 50%
				border-width: 19vh
				border-style: solid
			&:after
				content: ''
				position: absolute
				width: 100%
				height: 100%
				right: 0
				bottom: 0
				transition: .6s
				transition-delay: .6s
			&--theme-business
				background-color #f0ebde
				&:before
					border-color #f7f2e5
				&:after
					background: url(../img/slide-1_project.png) no-repeat
					background-position: bottom right
					background-size: auto 95%
			&--theme-marketing
				background-color #ffd24a
				&:before
					border-color #f9cc45
				&:after
					background: url(../img/slide-2.png) no-repeat
					background-position: bottom right
					background-size: auto 95%
			&--theme-projects
				background-color #dadada
				&:before
					border-color #d6d6d6
				&:after
					background: url(../img/slide-3.png) no-repeat
					background-position: bottom right
					background-size: auto 95%
			~/__info
				position relative
				margin-left: -70px
				width max-content
				~/__title
					font-size: 70px
					line-height: 70px
					margin: 0
					padding-bottom: 25px
				~/__text
					font-size: 22px
					line-height: 34px
					font-weight: normal
	&__navigation
		display flex
		justify-content center
		align-items center
		width max-content
		position absolute
		left 180px
		margin-top -6%
		z-index: 1
		~/__pagination
			font-size: 40px
			padding 0 4px 0 10px
			text-align center
			font-weight 700
			& > span
				font-size 20px
				position relative
				top -14px
				left -5px
		~/__btn-prev
		~/__btn-next
			cursor pointer
			width 44px
			margin-top 3px
			& > svg
				position relative
				transition .3s
				left 0
			&.swiper-button-disabled
				& > svg
					fill #fff
					cursor default
		~/__btn-prev
			&:hover > svg
				left -5px
			&.swiper-button-disabled
				&:hover > svg
					left 0
		~/__btn-next
			&:hover > svg
				left 5px
			&.swiper-button-disabled
				&:hover > svg
					left 0

