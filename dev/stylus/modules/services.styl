/*!-----------------------------------------------------------------
	.services - модуль секция сервис
 -----------------------------------------------------------------*/
.services
	margin 100px 0
	@media screen and (max-width 1440px)
		margin 70px 0
	&__slide
		~/__wrap
			margin 0 135px
			position relative
			height: 800px
			display flex
			align-items center
			@media screen and (max-width 1440px)
				margin 0 70px
				height 700px
			@media screen and (max-width 992px)
				margin 0 15px
			&:before
				content: ''
				position: absolute
				opacity: 1
				width: calc(92vh - 200px)
				height: calc(92vh - 200px)
				left 21%
				border-radius: 50%
				border-width: 19vh
				border-style: solid
			&:after
				content: ''
				position: absolute
				width: 100%
				height: 100%
				right: 0
				bottom: 0
				transition: .6s
				transition-delay: .6s
			&--theme-business
				background-color #f0ebde
				&:before
					border-color #f7f2e5
					@media screen and (max-width 992px)
						display none
				&:after
					background: url(../img/slide-1_project.png) no-repeat
					background-position: bottom right
					background-size: auto 95%
					@media screen and (max-width 1440px)
						background-size: auto 100%
					@media screen and (max-width 992px)
						opacity .3
			&--theme-marketing
				background-color #ffd24a
				&:before
					border-color #f9cc45
					@media screen and (max-width 992px)
						display none
				&:after
					background: url(../img/slide-2.png) no-repeat
					background-position: bottom right
					background-size: auto 95%
					@media screen and (max-width 1440px)
						background-size: auto 100%
					@media screen and (max-width 992px)
						opacity .3
			&--theme-projects
				background-color #dadada
				&:before
					border-color #d6d6d6
					@media screen and (max-width 992px)
						display none
				&:after
					background: url(../img/slide-3.png) no-repeat
					background-position: bottom right
					background-size: auto 95%
					@media screen and (max-width 1440px)
						background-size: auto 100%
					@media screen and (max-width 992px)
						opacity .3
			~/__info
				position relative
				margin-left: -70px
				z-index 1
				width max-content
				margin-top -8%
				@media screen and (max-width 1440px)
					margin-left -35px
				@media screen and (max-width 992px)
					margin-left 15px
				~/__title
					font-size: 70px
					line-height: 70px
					margin: 0
					padding-bottom: 25px
					@media screen and (max-width 992px)
						font-size 60px
						line-height 1em
						padding-bottom 20px
					@media screen and (max-width 768px)
						font-size 54px
						padding-bottom 15px
					@media screen and (max-width 550px)
						font-size: 30px
						line-height: 32px
				~/__text
					font-size: 22px
					line-height: 34px
					font-weight: normal
					@media screen and (max-width 992px)
						font-size: 20px
						line-height: 32px
					@media screen and (max-width 992px)
						font-size: 17px
						line-height: 26px
					@media screen and (max-width 550px)
						font-size 15px
						line-height: 20px
	&__navigation
		display flex
		justify-content center
		align-items center
		width max-content
		position absolute
		left 160px
		margin-top -14%
		z-index: 1
		@media screen and (max-width 1440px)
			left 120px
		@media screen and (max-width 992px)
			left 35px
		@media screen and (max-width 768px)
			transform scale(0.8)
			left 20px
		@media screen and (max-width 550px)
			margin-top -30%
		~/__pagination
			font-size: 40px
			padding 0 4px 0 10px
			text-align center
			font-weight 700
			& > span
				font-size 20px
				position relative
				top -14px
				left -5px
		~/__btn-prev
		~/__btn-next
			cursor pointer
			width 44px
			margin-top 3px
			& > svg
				position relative
				transition .3s
				left 0
			&.swiper-button-disabled
				& > svg
					fill #fff
					cursor default
		~/__btn-prev
			&:hover > svg
				left -5px
			&.swiper-button-disabled
				&:hover > svg
					left 0
		~/__btn-next
			&:hover > svg
				left 5px
			&.swiper-button-disabled
				&:hover > svg
					left 0

