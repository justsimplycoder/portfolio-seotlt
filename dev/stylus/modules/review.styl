/*!-----------------------------------------------------------------
	.review - модуль секция о нас говорят
 -----------------------------------------------------------------*/
.review
	// padding 80px 10% 20px 10%
	padding-top 80px
	overflow hidden
	position relative
	&:before
		content: ''
		position: absolute
		top: -300px
		right: -410px
		background: url(../img/circle_lg-blue.png) no-repeat
		width: 820px
		height: 820px
	&__title
		margin-top: 10px
		margin-bottom: 56px
		font-size 55px
		margin-left 10%
	&__wrap
		margin 70px 10% 60px
		box-shadow: 0 0 70px rgba(38, 142, 246, 0.12)
	.swiper-wrapper
		background-color #FFF
	&__slide
		display flex
		overflow hidden
		margin-left 1px
		background-color #FFF
	~/__img
		display: flex
		// justify-content: center
		align-items: flex-start
		width 270px
		> img
			width 270px
	&__body
		flex 1
		padding: 30px 5%
		display flex
		flex-direction: column
		justify-content: space-between
		~/__text
			font-size: 20px
			line-height: 34px
			flex-grow: 1
		~/__autor
			font-size: 16px
			color: #8594a8
			&:before
				content ''
				width: 22px
				height: 2px
				background: #8594a8
				display: inline-block
				margin-right: 13px
				margin-bottom: 4px
		~/__info
			display flex
			align-items center
			padding-top 30px
			position relative
			width min-content
			~/__logo
				width 120px
				position absolute
				right -166px
	&__navigation
		display flex
		justify-content center
		align-items center
		width max-content
		margin 0 auto
	&__btn-prev
	&__btn-next
		cursor pointer
		width 17px
		margin-top 3px
		& > svg
			fill #3393f8
	&__pagination
		padding 0 13px
		width auto !important
		& > .swiper-pagination-bullet
			font-size: 20px
			color: #8494a9
			margin: 13px !important
			width auto
			height auto
			opacity 1
			background none
			border-radius 0
		& > .swiper-pagination-bullet-active
			color: #3393f8
			border-bottom: 2px solid #3393f8
