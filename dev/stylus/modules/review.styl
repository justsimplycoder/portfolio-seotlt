/*!-----------------------------------------------------------------
	.review - модуль секция о нас говорят
 -----------------------------------------------------------------*/
.review
	// padding 80px 10% 20px 10%
	padding-top 80px
	overflow hidden
	position relative
	&:before
		content: ''
		position: absolute
		top: -300px
		right: -410px
		background-image radial-gradient(circle, rgba(255,255,255,1) 0%, rgba(255,255,255,1) 200px, rgba(241,248,255,1) 200px, rgba(242,249,255,1) 100%)
		border-radius: 50%
		width: 820px
		height: 820px
	&__title
		margin-top: 10px
		margin-bottom: 56px
		font-size 55px
		margin-left 10%
		font-weight bold
		position relative
		@media screen and (max-width 1024px)
			margin-left 7%
			font-size 46px
	&__wrap
		margin 70px 10% 60px
		box-shadow: 0 0 70px rgba(38, 142, 246, 0.12)
		@media screen and (max-width 1024px)
			margin 20px 7%
	.swiper-wrapper
		background-color #FFF
	&__slide
		display flex
		overflow hidden
		margin-left 1px
		background-color #FFF
		@media screen and (max-width 768px)
			flex-direction column
	~/__img
		display: flex
		// justify-content: center
		align-items: flex-start
		width 270px
		@media screen and (max-width 768px)
			width 100%
		& picture
			width 100%
		& img
			width 100%
			height auto
	&__body
		flex 1
		padding: 30px 5%
		display flex
		flex-direction: column
		justify-content: space-between
		~/__text
			font-size: 20px
			line-height: 34px
			flex-grow: 1
			@media screen and (max-width 1024px)
				font-size: 16px
				line-height: 1.8
		~/__autor
			font-size: 16px
			color: #8594a8
			&:before
				content ''
				width: 22px
				height: 2px
				background: #8594a8
				display: inline-block
				margin-right: 13px
				margin-bottom: 4px
		~/__info
			display flex
			align-items center
			padding-top 30px
			position relative
			width min-content
			@media screen and (max-width 768px)
				justify-content center
				width 100%
			~/__autor
				@media screen and (max-width 550px)
					margin-top 20px
					margin-bottom 20px
			~/__logo
				width 120px
				margin-left 20px
				@media screen and (max-width 550px)
					display none
				// position absolute
				// right -166px
	&__navigation
		display flex
		justify-content center
		align-items center
		width max-content
		margin 0 auto
	&__btn-prev
	&__btn-next
		cursor pointer
		width 17px
		margin-top 3px
		& > svg
			fill #3393f8
	&__pagination
		padding 0 13px
		width auto !important
		& > .swiper-pagination-bullet
			font-size: 20px
			color: #8494a9
			margin: 13px !important
			width auto
			height auto
			opacity 1
			background none
			border-radius 0
		& > .swiper-pagination-bullet-active
			color: #3393f8
			border-bottom: 2px solid #3393f8
