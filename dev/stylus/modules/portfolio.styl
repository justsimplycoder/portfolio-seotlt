/*!-----------------------------------------------------------------
	.portfolio - модуль секция портфолио
 -----------------------------------------------------------------*/
.portfolio
	&__item
		height 600px
		position relative
		&--theme-papa-pekar
			background-color #fcefdb
			background-image: url(../img/project-one-bg.jpg)
			background-position: left center
			background-repeat no-repeat
		&--theme-mysko-plus
			background-color #ebe6d6
			background-image: url(../img/project-six-bg.jpg)
			background-position: right center
			background-repeat no-repeat
		&--theme-tlt-telekom
			background-color #eef2fe
			background-image: url(../img/project-three-bg.jpg)
			background-position: left center
			background-repeat no-repeat
		~/__info
			min-width 36%
			position absolute
			top 105px
			padding 30px 5% 70px
			transition: .6s
			overflow hidden
			&:before
				content: ''
				position: absolute
				width: 550px
				height: 550px
				background-repeat: no-repeat
				background-position: left bottom
				top: -210px
				right: -260px
				border-radius: 50%
			&--theme-papa-pekar
				background-color #fca74b
				right: -70px
				&:before
					border 160px solid #ffaf51
			&--theme-mysko-plus
				background-color #dc3d3c
				left: -70px
				&:before
					border 160px solid #e14d49
			&--theme-tlt-telekom
				background-color #588bfb
				right: -70px
				&:before
					border 160px solid #5f8fff
			~/__title
				position relative
				font-size: 40px
				line-height: 45px
				color: #fff
				font-weight: 700
			~/__btn
				position relative



